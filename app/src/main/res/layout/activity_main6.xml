<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.timetabletest.Main4Activity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:id="@+id/scwed"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F15187">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#706E6E"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:text="8:00AM-9:55AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:textSize="20sp"
                        android:textColor="#090808"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#706E6E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MA20104"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#490ADF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By :- S. Khare                     \n         Venue:-NR121"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#0B0A0E"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#706E6E"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#706E6E"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F15187">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:text="10:00AM-10:55AM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:textSize="20sp"
                        android:textColor="#090808"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#706E6E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ME22002"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#490ADF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By :- Prof. S. Mitra                \n     Venue :- NR324"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#0B0A0E"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#706E6E"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>